{
  "manifest_version": 3,
  "name": "Haruto's GraphExtension",
  "version": "0.1.2",
  "description": "Haruto's GraphTool Extension to make GraphTool EQ any audio playing tabs",
  "permissions": [
    "tabCapture",
    "tabs"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/injector.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_title": "Haruto's GraphExtension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}