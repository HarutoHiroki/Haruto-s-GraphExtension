{
  "manifest_version": 2,
  "name": "Haruto's GraphExtension",
  "version": "0.2.2",
  "description": "Haruto's GraphTool Extension to make GraphTool EQ any audio playing tabs",
  "author": "root@harutohiroki.com",
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/injector.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Haruto's GraphExtension",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}